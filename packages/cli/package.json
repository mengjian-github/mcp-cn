{
  "name": "@mcp-hub/cli",
  "version": "1.0.0",
  "description": "MCP Hub 中国 - 命令行工具",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-hub": "dist/cli.js",
    "mcp-cn": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0",
    "lint:tsc": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.1",
    "commander": "^11.1.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0",
    "axios": "^1.8.4",
    "semver": "^7.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.14.1",
    "@types/semver": "^7.5.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "rimraf": "~6.0.1",
    "tsx": "^4.9.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "tool",
    "china"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
} 